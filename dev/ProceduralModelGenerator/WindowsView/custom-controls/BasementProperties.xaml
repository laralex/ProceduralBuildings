<UserControl x:Class="WindowsGeneratorView.BasementProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsGeneratorView"
             mc:Ignorable="d" Loaded="OnPanelLoaded" LostKeyboardFocus="OnCanvasLostFocus">
    <ScrollViewer>
        <DockPanel>
            <Canvas Name="c_canvas" Height="400" Grid.Row="0" Background="GhostWhite"
                MouseDown="OnCanvasMouseDown" MouseUp="OnCanvasMouseUp" DockPanel.Dock="Top"
                Margin="15" ClipToBounds="True" VerticalAlignment="Stretch"/>
            <GridSplitter DockPanel.Dock="Top" Grid.Row="1" Height="4" 
                          HorizontalAlignment="Stretch" ResizeDirection="Rows"/>
            <StackPanel DockPanel.Dock="Top" Grid.Row="2">
                <StackPanel Orientation="Horizontal">
                    <TextBox Margin="3" VerticalContentAlignment="Center" 
                             Width="70" Text="{Binding SelectedSideMeters}" 
                             PreviewTextInput="OnPreviewTextBoxDecimal"/>
                    <Label Margin="3" VerticalContentAlignment="Center" 
                           Content="Selected (or longest) wall length (meters)" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox Margin="3" VerticalContentAlignment="Center" 
                             Width="70" Text="{Binding BuildingHeight}" 
                             PreviewTextInput="OnPreviewTextBoxDecimal"/>
                    <Label Margin="3" VerticalContentAlignment="Center" 
                           Content="Height (meters)"/>
                </StackPanel>
                
            </StackPanel>
        </DockPanel>
    </ScrollViewer>
    
</UserControl>

