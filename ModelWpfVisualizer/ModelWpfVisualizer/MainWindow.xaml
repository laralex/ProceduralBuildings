            <Button Content="Open Model" HorizontalAlignment="Right" Margin="0,0,146,10" VerticalAlignment="Bottom" Width="119" Height="31"/>
        <Image HorizontalAlignment="Left" Name="infoimage"  Height="35" Source="pack://application:,,,/data/favicon.ico" Margin="4,0,0,12" VerticalAlignment="Bottom" Width="30" RenderTransformOrigin="-5.552,0.585"/>

